<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bluedatax.s1_wdp_code" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".activity.TeamSportValue"
            android:label="@string/title_activity_team_sport_value" >
        </activity>

        <service android:name=".service.MyService" />

        <activity
            android:name=".activity.GroupRank"
            android:label="@string/title_activity_group_rank" >
        </activity>
        <activity
            android:name=".activity.SetHand"
            android:label="@string/title_activity_set_hand" >
        </activity>
        <activity
            android:name=".activity.ChooseHead"
            android:label="@string/title_activity_choose_head" >
        </activity>
        <activity
            android:name=".activity.DeviceEvent"
            android:label="@string/title_activity_device_event" >
        </activity>
        <activity
            android:name=".activity.AccidentState"
            android:label="@string/title_activity_accident_state" >
        </activity>
        <activity
            android:name=".activity.DeviceMessage"
            android:label="@string/title_activity_device_message" >
        </activity>
    </application>

</manifest>
